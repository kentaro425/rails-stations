<h2>上映一覧</h2>
<table border=1>
  <tr>
    <th>ID</th>
    <th>映画名</th>
    <th>開始時間</th>
    <th>終了時間</th>
    <th>作成日時</th>
    <th>更新時間</th>
  </tr>
  <% @schedules.each do |schedule| %>
    <tr>
        <td><%= link_to schedule.id, admin_schedule_path(schedule) %></td>
        <td><%= link_to schedule.movie.name, admin_movie_path(schedule.movie.id) %></td>
        <td><%= schedule.start_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= schedule.end_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= schedule.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= schedule.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    </tr>
  <% end %>

</table>
